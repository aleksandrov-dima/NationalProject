                iconContent: '786'
            },
            {
                iconLayout: 'default#imageWithContent',
                iconImageHref: 'images/map_circle.png',
                iconImageSize: [64, 64],
                iconImageOffset: [0, 0],
                iconContentOffset: [8, 23],
